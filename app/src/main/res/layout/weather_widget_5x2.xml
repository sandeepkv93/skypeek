<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_5x2"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Top Row: Current Weather -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Left: Location and Condition -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:id="@+id/widget_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Location"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/widget_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partly Cloudy"
                android:textColor="#CCFFFFFF"
                android:textSize="11sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Center: Weather Icon -->
        <ImageView
            android:id="@+id/widget_weather_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_partly_cloudy"
            android:scaleType="fitCenter"
            android:layout_marginEnd="8dp" />

        <!-- Right: Temperature -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22°"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/widget_high_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H:25° L:18°"
                android:textColor="#CCFFFFFF"
                android:textSize="9sp"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>

    </LinearLayout>

    <!-- Additional Info Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/widget_feels_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feels like 24°"
            android:textColor="#99FFFFFF"
            android:textSize="9sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/widget_last_updated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Updated 5 min ago"
            android:textColor="#99FFFFFF"
            android:textSize="9sp"
            android:fontFamily="sans-serif"
            android:gravity="end" />

    </LinearLayout>

    <!-- Hourly Forecast Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Hour 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_hour1_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now"
                android:textColor="#CCFFFFFF"
                android:textSize="9sp"
                android:fontFamily="sans-serif" />

            <ImageView
                android:id="@+id/widget_hour1_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_partly_cloudy"
                android:scaleType="fitCenter"
                android:layout_marginVertical="2dp" />

            <TextView
                android:id="@+id/widget_hour1_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22°"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Hour 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_hour2_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1PM"
                android:textColor="#CCFFFFFF"
                android:textSize="9sp"
                android:fontFamily="sans-serif" />

            <ImageView
                android:id="@+id/widget_hour2_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_sunny"
                android:scaleType="fitCenter"
                android:layout_marginVertical="2dp" />

            <TextView
                android:id="@+id/widget_hour2_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24°"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Hour 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_hour3_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2PM"
                android:textColor="#CCFFFFFF"
                android:textSize="9sp"
                android:fontFamily="sans-serif" />

            <ImageView
                android:id="@+id/widget_hour3_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_cloudy"
                android:scaleType="fitCenter"
                android:layout_marginVertical="2dp" />

            <TextView
                android:id="@+id/widget_hour3_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23°"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Hour 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_hour4_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3PM"
                android:textColor="#CCFFFFFF"
                android:textSize="9sp"
                android:fontFamily="sans-serif" />

            <ImageView
                android:id="@+id/widget_hour4_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_rain"
                android:scaleType="fitCenter"
                android:layout_marginVertical="2dp" />

            <TextView
                android:id="@+id/widget_hour4_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21°"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Hour 5 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_hour5_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4PM"
                android:textColor="#CCFFFFFF"
                android:textSize="9sp"
                android:fontFamily="sans-serif" />

            <ImageView
                android:id="@+id/widget_hour5_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_rain"
                android:scaleType="fitCenter"
                android:layout_marginVertical="2dp" />

            <TextView
                android:id="@+id/widget_hour5_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20°"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Hour 6 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_hour6_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5PM"
                android:textColor="#CCFFFFFF"
                android:textSize="9sp"
                android:fontFamily="sans-serif" />

            <ImageView
                android:id="@+id/widget_hour6_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_cloudy"
                android:scaleType="fitCenter"
                android:layout_marginVertical="2dp" />

            <TextView
                android:id="@+id/widget_hour6_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19°"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </LinearLayout>

    <!-- Tomorrow Forecast -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomorrow:"
            android:textColor="#CCFFFFFF"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/widget_tomorrow_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_sunny"
            android:scaleType="fitCenter"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/widget_tomorrow_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26°"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginEnd="2dp" />

        <TextView
            android:id="@+id/widget_tomorrow_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19°"
            android:textColor="#CCFFFFFF"
            android:textSize="11sp"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

</LinearLayout> 