<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_5x2"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top Row: Current Weather -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Left: Location and Current Conditions -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:id="@+id/widget_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Location"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/widget_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partly Cloudy"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/widget_last_updated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated 5 min ago"
                android:textColor="#99FFFFFF"
                android:textSize="9sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Center: Weather Icon -->
        <ImageView
            android:id="@+id/widget_weather_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_partly_cloudy"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="12dp" />

        <!-- Right: Temperature and Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/widget_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22°"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-ultralight" />

            <TextView
                android:id="@+id/widget_high_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H:25° L:18°"
                android:textColor="#CCFFFFFF"
                android:textSize="11sp"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/widget_feels_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feels like 24°"
                android:textColor="#99FFFFFF"
                android:textSize="9sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Separator Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33FFFFFF"
        android:layout_marginVertical="4dp" />

    <!-- Bottom Row: Hourly and Tomorrow Forecast -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Left: 6-Hour Forecast -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Hour 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/widget_hour1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Now"
                    android:textColor="#CCFFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif" />

                <ImageView
                    android:id="@+id/widget_hour1_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_partly_cloudy"
                    android:scaleType="fitCenter"
                    android:layout_marginVertical="3dp" />

                <TextView
                    android:id="@+id/widget_hour1_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22°"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Hour 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/widget_hour2_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1PM"
                    android:textColor="#CCFFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif" />

                <ImageView
                    android:id="@+id/widget_hour2_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_sunny"
                    android:scaleType="fitCenter"
                    android:layout_marginVertical="3dp" />

                <TextView
                    android:id="@+id/widget_hour2_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24°"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Hour 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/widget_hour3_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2PM"
                    android:textColor="#CCFFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif" />

                <ImageView
                    android:id="@+id/widget_hour3_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_cloudy"
                    android:scaleType="fitCenter"
                    android:layout_marginVertical="3dp" />

                <TextView
                    android:id="@+id/widget_hour3_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23°"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Hour 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/widget_hour4_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3PM"
                    android:textColor="#CCFFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif" />

                <ImageView
                    android:id="@+id/widget_hour4_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_rain"
                    android:scaleType="fitCenter"
                    android:layout_marginVertical="3dp" />

                <TextView
                    android:id="@+id/widget_hour4_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21°"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Hour 5 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/widget_hour5_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4PM"
                    android:textColor="#CCFFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif" />

                <ImageView
                    android:id="@+id/widget_hour5_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_rain"
                    android:scaleType="fitCenter"
                    android:layout_marginVertical="3dp" />

                <TextView
                    android:id="@+id/widget_hour5_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20°"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Hour 6 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/widget_hour6_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5PM"
                    android:textColor="#CCFFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif" />

                <ImageView
                    android:id="@+id/widget_hour6_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_cloudy"
                    android:scaleType="fitCenter"
                    android:layout_marginVertical="3dp" />

                <TextView
                    android:id="@+id/widget_hour6_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19°"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </LinearLayout>

        <!-- Vertical Separator -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#33FFFFFF"
            android:layout_marginHorizontal="12dp" />

        <!-- Right: Tomorrow's Forecast -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomorrow"
                android:textColor="#CCFFFFFF"
                android:textSize="10sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <ImageView
                android:id="@+id/widget_tomorrow_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sunny"
                android:scaleType="fitCenter"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/widget_tomorrow_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26°"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/widget_tomorrow_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19°"
                android:textColor="#CCFFFFFF"
                android:textSize="11sp"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout> 